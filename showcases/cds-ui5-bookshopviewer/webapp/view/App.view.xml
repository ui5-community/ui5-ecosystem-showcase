<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="ui5.bookshopviewer.controller.App">
  <App>
    <pages>
      <Page title="{i18n>Bookshop}">
        <content>
          <Panel headerText="Hello, UI5er! ðŸ‘‹">
            <content>
              <SearchField liveChange=".onSearch" />
              <Table id="booksTable" items="{/Books}">
                <columns>
                  <Column>
                    <Text text="{i18n>Book}" />
                  </Column>
                  <Column>
                    <Text text="{i18n>Author}" />
                  </Column>
                  <Column>
                    <Text text="{i18n>Genre}" />
                  </Column>
                  <Column>
                    <Text text="{i18n>Price}" />
                  </Column>
                  <Column>
                    <Text text="{i18n>Stock}" />
                  </Column>
                </columns>
                <items>
                  <ColumnListItem vAlign="Middle" press=".onSelect" type="Active">
                    <cells>
                      <ObjectIdentifier title="{title}" />
                      <Text text="{author}" />
                      <Text text="{genre/name}" />
                      <ObjectNumber number="{price}" unit="{currency_code}" />
                      <ObjectStatus
                        text="{stock}"
                        state="{=
                                            ${stock} >= 20
                                                ? 'Success'
                                            : ${stock} > 0
                                                ? 'Warning'
                                            : 'Error'}"
                      />
                    </cells>
                  </ColumnListItem>
                </items>
              </Table>
            </content>
          </Panel>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>
