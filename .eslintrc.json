{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "extends": ["eslint:recommended", "plugin:jsdoc/recommended"],
  "plugins": ["jsdoc"],
  "rules": {
    "no-mixed-spaces-and-tabs": "warn"
  },
  "globals": {
    "yo": "writable",
    "confirm": "writable",
    "map": "writable",
    "input": "writable"
  }
}
