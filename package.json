{
  "name": "ui5-ecosystem-showcase",
  "version": "0.1.0",
  "description": "A repository show-casing the UI5 tooling extensibility to combine OSS tools for UI5 application development.",
  "private": true,
  "author": "Volker Buzek, Peter Muessig",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ui5-community/ui5-ecosystem-showcase.git"
  },
  "scripts": {
    "build": "pnpm build --filter ui5-app",
    "build:pwa": "pnpm build:pwa --filter ui5-app",
    "clean": "pnpm clean --filter ui5-app",
    "dev": "pnpm  dev --filter ui5-app",
    "start": "pnpm  start --filter ui5-app",
    "//*test:ci": "1. start ui5 serve and bg it - 2. run the e2e tests in parallel",
    "test:ci": "HEADLESS=true npm-run-all -p -r test:ci:pre test:ci:exec",
    "test:ci:pre": "pnpm start:ci --filter ui5-app",
    "test:ci:exec": "wait-on tcp:1081 && pnpm run test:wdi5",
    "test:opa5": "pnpm test --filter ui5-app",
    "test:opa5-ci": "pnpm test:ci --filter ui5-app",
    "//deprecated! test:uiveri5": "pnpm test:uiveri5 --filter ui5-app",
    "test:wdi5": "pnpm test:wdi5 --filter ui5-app",
    "test:ui5-middleware-cfdestination": "pnpm test --filter ui5-middleware-cfdestination ",
    "test:ui5-task-zipper": "pnpm test --filter  ui5-task-zipper ",
    "test:all": " npm-run-all test:opa5-ci test:ui5-middleware-cfdestination test:ui5-task-zipper",
    "watch": "pnpm watch --filter ui5-app",
    "release:version": "lerna version",
    "release:publish": "lerna publish from-git --yes --no-verify-access",
    "release:publish-manual": "lerna publish from-package --yes --no-verify-access",
    "lint:staged": "lint-staged",
    "lint:commit": "commitlint -e",
    "prettier": "prettier --write .",
    "prettier:staged": "pretty-quick --staged --verbose",
    "ncu": "for d in ./packages/*/ ; do (cd \"$d\" && ncu); done",
    "ncu-u": "for d in ./packages/*/ ; do (cd \"$d\" && ncu -u); done",
    "prepare": "node ./.husky/skip.js || husky install",
    "hooks:pre-commit": "npm-run-all --sequential prettier:staged lint:staged",
    "hooks:pre-push": "npm-run-all --sequential lint:commit"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.1",
    "@commitlint/config-conventional": "17.0.0",
    "@prettier/plugin-xml": "^2.2.0",
    "beachball": "^2.22.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.15.0",
    "eslint-plugin-jsdoc": "^39.3.0",
    "husky": "^8.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-properties": "^0.1.0",
    "pretty-quick": "^3.1.3",
    "wait-on": "^6.0.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "resolutions": {
    "minimist": "^1.2.6"
  }
}
