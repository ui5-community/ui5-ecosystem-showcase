{
  "name": "ui5-app",
  "version": "0.2.0",
  "description": "UI5 application using custom middlewares and tasks",
  "private": true,
  "author": "Volker Buzek, Peter Muessig",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/petermuessig/ui5-ecosystem-showcase.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prepare": "mkdirp dist",
    "build": "ui5 build self-contained",
    "start": "ui5 serve --config ui5-dist.yaml --port 1081 --open index.html",
    "dev": "ui5 serve --port 1081 --open index.html",
    "debug": "node --inspect node_modules/.bin/ui5 serve --port 1081",
    "test": "karma start",
    "watch:build": "npm-watch build",
    "watch": "npm-run-all prepare --parallel watch:build start",
    "ncu-upgrade": "ncu -u"
  },
  "watch": {
    "build": {
      "patterns": [
        "webapp"
      ],
      "extensions": "html,js,json,xml,properties",
      "quiet": false
    }
  },
  "devDependencies": {
    "@openui5/ts-types": "^1.60.5",
    "@ui5/cli": "^2.0.2",
    "karma": "^5.0.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-ui5": "^2.0.0",
    "mkdirp": "~1.0.3",
    "npm-check-updates": "^4.1.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "rimraf": "~3.0.2",
    "ui5-middleware-cfdestination": "^0.1.7",
    "ui5-middleware-iasync": "^0.0.2-alpha.1",
    "ui5-middleware-index": "^0.1.0",
    "ui5-middleware-livereload": "^0.1.10",
    "ui5-middleware-livetranspile": "^0.1.8",
    "ui5-middleware-servestatic": "^0.1.6",
    "ui5-middleware-simpleproxy": "^0.2.1",
    "ui5-task-transpile": "^0.1.6",
    "ui5-task-zipper": "^0.1.4",
    "ui5-task-i18ncheck": "^0.1.0"
  },
  "ui5": {
    "dependencies": [
      "ui5-middleware-cfdestination",
      "ui5-middleware-livereload",
      "ui5-middleware-iasync",
      "ui5-middleware-index",
      "ui5-middleware-livetranspile",
      "ui5-middleware-simpleproxy",
      "ui5-middleware-servestatic",
      "ui5-task-transpile",
      "ui5-task-zipper",
      "ui5-task-i18ncheck"
    ]
  }
}
